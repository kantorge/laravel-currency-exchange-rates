{
    "name": "kantorge/laravel-currency-exchange-rates",
    "description": "A Laravel package to retrieve historical currency exchange rate data",
    "keywords": [
        "kantorge",
        "laravel",
        "laravel-currency-exchange-rates"
    ],
    "homepage": "https://github.com/kantorge/laravel-currency-exchange-rates",
    "license": "MIT",
    "authors": [
        {
            "name": "Gergely KÃ¡ntor",
            "email": "kantorge@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "*",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Kantorge\\CurrencyExchangeRates\\": "src/",
            "Kantorge\\CurrencyExchangeRates\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kantorge\\CurrencyExchangeRates\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-currency-exchange-rates --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kantorge\\CurrencyExchangeRates\\CurrencyExchangeRatesServiceProvider"
            ],
            "aliases": {
                "CurrencyExchangeRates": "Kantorge\\CurrencyExchangeRates\\Facades\\CurrencyExchangeRates"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
